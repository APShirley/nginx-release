# abort script on any command that exits with a non zero value
set -e

# FIXME: we should rebuild dependencies from source; we should NOT use
# this ugly hack to install via yum/apt-get.
if [ -f /etc/redhat-release ]; then
  :
elif [ -f /etc/lsb-release ]; then
  apt-get update
  apt-get install -y libpcre3 libpcre3-dev
fi

tar xvzf nginx-1.6.2/nginx-1.6.2.tar.gz
cd nginx-1.6.2

./configure --prefix=${BOSH_INSTALL_TARGET} --with-http_ssl_module
make
make install
